#!/usr/bin/env python

import sys;
import re;

if ( len(sys.argv) != 2 ):
  print "USAGE: saru-parse filename"
  exit(1)

try:
  infile = open(sys.argv[1], "r")
except IOError:
  print "saru-parse: Unable to open "+sys.argv[1]
  exit(1)


pattern = re.compile("^ *// *TEST *: *(\\S+)(.*)$")

print "File=\""+sys.argv[1]+"\""
for line in infile:
  match = pattern.search(line); 
  if ( match ):
    print "   " + match.group(1) + " : \"" + match.group(2).strip() + "\"" 

